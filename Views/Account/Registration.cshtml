@model MusicalGroup.ViewModels.RegistrationModel

<h2>Регистрация</h2>

<form asp-action="Registration" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Login">Введите логин</label><br />
            <input type="text" asp-for="Login" />
            <span asp-validation-for="Login"></span>
        </div>
        <div>
            <label asp-for="Password">Введите пароль</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <label asp-for="ConfirmPassword">Повторите пароль</label><br />
            <input asp-for="ConfirmPassword" />
            <span class="validation" asp-validation-for="ConfirmPassword"></span>
        </div>
        <div>
            <input type="submit" class="btn btn-primary" value="Регистрация" />
        </div>
    </div>
</form>
