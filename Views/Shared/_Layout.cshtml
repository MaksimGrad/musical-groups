<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.flatly.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />
    <script src="~/js/bootstrap.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/Home/Index">Mylo Xyloto</a>
            @{ if (User.Identity.IsAuthenticated)
                {
                    <div class="collapse navbar-collapse" id="navbarColor01">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="#">@User.Identity.Name</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Logout" asp-controller="Account">Выйти</a>
                            </li>
                        </ul>
                    </div>
                }
            }
        </div>
    </nav>
    <div class="container">
        @RenderBody()
    </div>
    <footer id="footer">
        <div class="container">
            <span>© 2019 Mylo Xyloto</span>
        </div>
    </footer>
</body>
</html>
